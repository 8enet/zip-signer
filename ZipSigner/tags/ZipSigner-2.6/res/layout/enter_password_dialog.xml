<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/enter_password_dialog_layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp"
              >
                                           
    <EditText android:id="@+id/EnterPasswordView"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text=""
              android:password="true"
              />

    <LinearLayout android:orientation="horizontal" 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    
    <Button android:id="@+id/EnterPasswordDoneButton" 
  	    	android:text="@string/OkButtonLabel"
   		    android:layout_width="wrap_content" 
   		    android:layout_height="wrap_content"
   		    android:layout_marginTop="20px"
   		    android:layout_marginBottom="20px"
      		/>   
    <Button android:id="@+id/EnterPasswordCancelButton" 
  	    	android:text="@string/CancelButtonLabel"
   		    android:layout_width="wrap_content" 
   		    android:layout_height="wrap_content"
   		    android:layout_marginLeft="20px"
   		    android:layout_marginTop="20px"
   		    android:layout_marginBottom="20px"
      		/>        		           
    </LinearLayout>                                                           		
</LinearLayout>