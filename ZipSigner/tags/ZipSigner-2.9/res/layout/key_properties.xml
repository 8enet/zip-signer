<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10sp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        >

        <TableLayout android:layout_width="fill_parent"
                     android:layout_height="wrap_content">
            <TableRow>
                <TextView android:text="@string/KeyNameLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginTop="10sp"
                    />
                <TextView android:id="@+id/KeyName"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="10sp"
                    />
            </TableRow>
            <TableRow>
                <TextView android:text="@string/KeystoreFilenameLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginTop="10sp"
                    />
                <TextView android:id="@+id/KeystoreFilename"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="10sp"
                    />
            </TableRow>
            <TableRow>
                <TextView android:text="@string/KeyTypeLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginTop="10sp"
                    />
                <TextView android:id="@+id/KeyType"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="10sp"
                    />
            </TableRow>
            <TableRow>
                <TextView android:text="@string/KeyFormatLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginTop="10sp"
                    />
                <TextView android:id="@+id/KeyFormat"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="10sp"
                    />
            </TableRow>
            <TableRow>
                <TextView android:text="@string/KeySizeLabel"
                          android:id="@+id/KeySizeLabel"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginTop="10sp"
                    />
                <TextView android:id="@+id/KeySize"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="16sp"
                          android:layout_marginTop="10sp"
                          android:layout_marginLeft="10sp"
                    />
            </TableRow>
        </TableLayout>

        <TextView android:text="@string/CertParametersTitle"
                  android:id="@+id/CertParametersLabel"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:layout_marginTop="20sp"
            />

        <TextView android:text="@string/ExpiresLabel"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:layout_marginTop="10sp"
            />

        <TextView android:id="@+id/Expires"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
            />


        <LinearLayout android:id="@+id/SubjectDnLinearLayout"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="10sp"
           >
            <TextView android:text="@string/SubjectDN"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:textStyle="bold"
                />
        </LinearLayout>


        <TextView android:id="@+id/SelfSigned"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:layout_marginTop="10sp"
            />


        <LinearLayout android:id="@+id/IssuerDnLinearLayout"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="10sp"
            >
            <TextView android:text="@string/IssuerDN"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="16sp"
                      android:textStyle="bold"
                />
        </LinearLayout>

        <Button android:text="@string/OkButtonLabel"
                android:id="@+id/OkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="30sp"
            />

    </LinearLayout>
</ScrollView>

