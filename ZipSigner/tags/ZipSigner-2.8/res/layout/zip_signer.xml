<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10sp"
    >



<TextView android:text="Signing in progress..." 
          android:id="@+id/SigningZipHeaderTextView" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textStyle="bold"
          />
          
<TextView android:text="Loading certificate and private key..." 
          android:id="@+id/SigningZipItemTextView" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:layout_marginTop="10sp"
          />
          
<ProgressBar android:id="@+id/SigningZipProgressBar" 
			 android:layout_width="fill_parent" 
			 android:layout_height="wrap_content"
			 android:layout_marginTop="20sp"
			 android:layout_marginBottom="20sp"
			 style="?android:attr/progressBarStyleHorizontal"
			 />
			 
<Button android:text="@string/CancelButtonLabel" 
        android:id="@+id/SigningZipCancelButton" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        />
        
</LinearLayout>
